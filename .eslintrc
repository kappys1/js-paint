{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "import/named": 0,
    "strict": 0,
    "react/prop-types": 0,
    "no-console": 1,
    "no-unused-expressions": 0,
    "allowShortCircuit": 0,
    "allowTernary": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": 0,
    "class-methods-use-this": 0,
    "no-param-reassign": 0,
    "arrow-body-style": ["error", "as-needed", {
      "requireReturnForObjectLiteral": true
    }]
  }
}
